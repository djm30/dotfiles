# Previewers
set previewer ~/.config/lf/lf_preview
set cleaner ~/.config/lf/lf_clean

# Basic settings
set icons true
set hidden false
set ignorecase true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd copypath ${{
 echo "$f" | pbcopy 
}}

cmd open ${{

}}

cmd custom_open ${{
  # If file is a progamming file open it in neovim instead somehow
  open "$f"
}}

# Mappings
map l open

map m
map mf mkfile
map mp copypath
map md mkdir

map d
map . set hidden!
map dd delete
map p paste
map x cut
map y copy
map <enter> custom_open
map R reload
map bg setwallpaper
map C clear

# q quits and cds
# Q quits and returns to original dir
push m-
map Q push '-q
map esc quit

map gd cd ~/Documents
map gD cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/dotfiles
